 @model IEnumerable<AppData.MenuItem>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="mb-3 text-end">
        <a class="btn btn-primary" asp-action="Create">+ Create New</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Item)</th>
                <th>@Html.DisplayNameFor(model => model.Url)</th>
                <th>@Html.DisplayNameFor(model => model.TenController)</th>
                <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                <th>@Html.DisplayNameFor(model => model.OrderIndex)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Item)</td>
                    <td>@Html.DisplayFor(modelItem => item.Url)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenController)</td>
                    <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderIndex)</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ID">Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
